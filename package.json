{
	"name": "include-fussball-de-widgets",
	"version": "4.0.0",
	"description": "A WordPress plugin for easy integration of fussball.de widgets.",
	"homepage": "https://github.com/mheob/include-fussball-de-widgets#readme",
	"bugs": {
		"url": "https://github.com/mheob/include-fussball-de-widgets/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mheob/include-fussball-de-widgets.git"
	},
	"license": "GPL-2.0-or-later",
	"author": "Alexander BÃ¶hm",
	"type": "module",
	"main": "build/index.js",
	"scripts": {
		"build": "NODE_ENV=production webpack",
		"clear": "rimraf dist",
		"cspell": "cspell .",
		"dev": "NODE_ENV=development webpack",
		"format": "prettier --write \"**/*.{cjs,js,mjs,ts,json,md,mdx,yaml,yml}\"",
		"i18n": "bun run i18n:json && bun run i18n:copy",
		"i18n:copy": "cpr src/languages dist/languages -d",
		"i18n:json": "wp i18n make-json src/languages/include-fussball-de-widgets-de_DE.po --no-purge",
		"i18n:pot": "wp i18n make-pot src src/languages/include-fussball-de-widgets.pot --slug=include-fussball-de-widgets --domain=include-fussball-de-widgets --package-name=\"Include Fussball.de Widgets\"",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"postbuild": "bun run i18n",
		"postdev": "bun run i18n && node ./tasks/cp-dev-release.js",
		"prebuild": "bun run clear",
		"predev": "bun run clear",
		"prepare": "husky",
		"release": "bun run build && bun run release:copy && bun run release:github",
		"release:copy": "cpr dist .releases/include-fussball-de-widgets/trunk/ -d",
		"release:github": "cpr dist .github-releases/include-fussball-de-widgets -d && cd .github-releases/ && bestzip include-fussball-de-widgets.zip include-fussball-de-widgets && rimraf include-fussball-de-widgets && cd .."
	},
	"lint-staged": {
		"*": "eslint --fix"
	},
	"dependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@cspell/dict-de-de": "^4.0.3",
		"@mheob/commitlint-config": "^1.2.0",
		"@mheob/eslint-config": "^6.2.0",
		"@mheob/prettier-config": "^3.3.2",
		"@wordpress/babel-preset-default": "^8.11.0",
		"@wordpress/block-editor": "^14.6.0",
		"@wordpress/blocks": "^14.0.0",
		"@wordpress/components": "^28.11.0",
		"@wordpress/compose": "^7.11.0",
		"@wordpress/element": "^6.11.0",
		"@wordpress/i18n": "^5.11.0",
		"@wordpress/postcss-plugins-preset": "^5.11.0",
		"babel-loader": "^9.2.1",
		"bestzip": "^2.2.1",
		"commitizen": "^4.3.1",
		"copy-webpack-plugin": "^12.0.2",
		"cpr": "^3.0.1",
		"cspell": "^8.16.0",
		"css-loader": "^7.1.2",
		"cssnano": "^7.0.6",
		"cz-git": "^1.11.0",
		"eslint": "^9.14.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"mini-css-extract-plugin": "^2.9.2",
		"postcss-loader": "^8.1.1",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"sass": "^1.80.6",
		"sass-loader": "^16.0.3",
		"source-map-loader": "^5.0.0",
		"terser-webpack-plugin": "^5.3.10",
		"webpack": "^5.96.1",
		"webpack-cli": "^5.1.4"
	}
}
